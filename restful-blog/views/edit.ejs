<% include ./partials/header %>

<div class="ui container segment">
	<div class="ui huge center aligned header">Update Post: <%= blog.title %></div>
	<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
		<div class="two fields">
			<div class="field">
				<label for="blog[title]">Title</label>
				<input name="blog[title]" type="text" placeholder="Title" value="<%= blog.title %>">
			</div>
			<div class="field">
				<label for="blog[image]">Image</label>
				<input name="blog[image]" type="text" placeholder="Image Url" value="<%= blog.image %>">
			</div>
		</div>
		<div class="field">
			<label for="blog[body]">Body</label>
			<textarea name="blog[body]"><%= blog.body %>"</textarea>
		</div>
		<div class="right aligned field">
			<div class="ui right aligned container">
				<input type="submit" class="ui violet inverted button" value="Update">
			</div>
		</div>
	</form>
</div>

<% include ./partials/footer %>